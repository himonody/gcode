# Application Environment
APP_ENV=development  # development, staging, production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Mode
REDIS_MODE=standalone  # standalone, cluster, sentinel

# Cluster Configuration (if REDIS_MODE=cluster)
REDIS_CLUSTER_ADDRS=node1:6379,node2:6379,node3:6379

# Sentinel Configuration (if REDIS_MODE=sentinel)
REDIS_SENTINEL_MASTER=mymaster
REDIS_SENTINEL_ADDRS=sentinel1:26379,sentinel2:26379,sentinel3:26379

# Connection Pool
REDIS_POOL_SIZE=50
REDIS_MIN_IDLE_CONNS=10

# Timeouts (in seconds)
REDIS_DIAL_TIMEOUT=10
REDIS_READ_TIMEOUT=5
REDIS_WRITE_TIMEOUT=5

# Retry Configuration
REDIS_MAX_RETRIES=5

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Health Check
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=5    # seconds
